{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

    <h3> Recherche </h3>
    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <br>
    <button type="sumbit" class="btn btn-light" name="btnSearch">Search</button>
    <br>
    {{ form_end(form) }}

    {% if program.title is defined %}
        <p>{{ program.title }}</p>
        <p>{{ program.summary }}</p>
    {% endif %}
    <br>


    <h1>All programs from program table : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Category : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        No program found
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Bakc to Homepage </a>

    <br>

    <br>
    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>

{% endblock %}