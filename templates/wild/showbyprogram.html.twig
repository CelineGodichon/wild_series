{% extends "base.html.twig" %}

{% block body %}
    <div class="media program d-flex flex-column align-items-center">
        <div class="programInfos d-flex flex-column align-items-center">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
        <div class="d-flex align-items-center">
            <div>
                <img class="align-self-start" src="{{ program.poster }}" alt="{{ program.title }} poster">
            </div>
            <div>
                {% for season in seasons %}
                    <a href="{{ path('wild_season', {'id': season.id }) }}" class="ml-5"> Season : {{ season.id }}</a><br>
                {% endfor %}
            </div>
        </div>
        <strong class="mt-5">Actors : </strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('wild_actor', {'id' : actor.id}) }}">{{ actor.name }} </a> </li>
            {% else %}
                <li>No actor for this program</li>
            {% endfor %}
        </ul>

    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn ml-5" href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
    {% endif %}
    <br>
    <a class="btn ml-5" href="{{ path('wild_index') }}">Retour à l'accueil</a>
{% endblock %}

