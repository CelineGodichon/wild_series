{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Seasons</h1>

        <div class="createNewItem">
            <a href="{{ path('season_new') }}">
                <i class="fas fa-plus-circle"></i>
                Create new
            </a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for season in seasons %}
                <tr>
                    <td>{{ season.id }}</td>
                    <td>{{ season.year }}</td>
                    <td>{{ season.description }}</td>
                    <td>
                        <a href="{{ path('season_show', {'id': season.id}) }}"><i class="far fa-eye"></i></a>
                        <a href="{{ path('season_edit', {'id': season.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
