{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
<div class="container">

<h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}"><i class="far fa-arrow-alt-circle-left"></i> Back</a>
    <br>

    <a href="{{ path('season_edit', {'id': season.id}) }}"><i class="fas fa-pencil-alt"></i> Edit </a>

    {{ include('season/_delete_form.html.twig') }}
</div>
{% endblock %}
