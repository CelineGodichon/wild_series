{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Programs</h1>
        <div class="createNewItem">
            <a href="{{ path('program_new') }}">
                <i class="fas fa-plus-circle"></i>
                Create new
            </a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Actors</th>
                <th>Poster</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.summary }}</td>
                    <td>
                        {% for actor in program.actors %}
                            <li>{{ actor.name }}</li>
                        {% endfor %}
                    </td>
                    <td>{{ program.poster }}</td>
                    <td>
                        <a href="{{ path('program_show', {'slug': program.slug}) }}"><i class="far fa-eye"></i></a>
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}"><i
                                    class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
