{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
<div class="container">

<h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}"><i class="far fa-arrow-alt-circle-left"></i> Back</a>
    <br>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>

    {{ include('episode/_delete_form.html.twig') }}
</div>
{% endblock %}
